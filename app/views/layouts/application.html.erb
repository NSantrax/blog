<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  
    <p id="notice" class="notice"> <%= notice %> </p>
    <p id= "alert"class="alert"> <%= alert %> </p>
    
    <% if user_signed_in? %>
      <%= link_to 'Выйти', destroy_user_session_path, method: :delete %>
      <% else %>
      <%= link_to 'КОШАЧИЙ ЛАЗ', new_user_session_path %>
      <div> <img src="http://kotikinyashki.ru/media/django-summernote/2015-05-01/17ca8d09-5354-4758-9170-4314a7101835.jpg"  width="10%" height="10%"></div>
      <% end %>
    
    <%= yield %>
  </body>
</html>
